@model e4userslist.Models.User

@{ ViewData["Title"] = "Delete"; }

<h2 class="text-black-50 pl-3">Delete User</h2>
<hr />

<form method="post" asp-action="Delete">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">

            <h3 class="pl-3">Are you sure you want to delete this user? </h3>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="col-6">
                        <label asp-for="LastName"></label>
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-6">
                        <input asp-for="FirstName" disabled class="form-control" />
                    </div>
                    <div class="col-6">
                        <input asp-for="LastName" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-75" value="Delete" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-75">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>